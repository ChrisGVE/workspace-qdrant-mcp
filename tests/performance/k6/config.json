{
  "test_config": {
    "server_url": "http://127.0.0.1:8000",
    "timeout": "5s",
    "target_response_time_ms": 200,
    "max_acceptable_response_time_ms": 500,
    "max_error_rate": 0.01,
    "min_success_rate": 0.95
  },
  "scenarios": {
    "load_test": {
      "description": "Sustained load with 10 virtual users for 30 seconds",
      "executor": "constant-vus",
      "vus": 10,
      "duration": "30s"
    },
    "stress_test": {
      "description": "Gradual ramp-up to 50 VUs to test system limits",
      "executor": "ramping-vus",
      "stages": [
        { "duration": "30s", "target": 20 },
        { "duration": "60s", "target": 50 },
        { "duration": "30s", "target": 0 }
      ]
    },
    "spike_test": {
      "description": "Sudden traffic spikes to test system resilience",
      "executor": "ramping-arrival-rate",
      "start_rate": 10,
      "time_unit": "1s",
      "pre_allocated_vus": 50,
      "max_vus": 100,
      "stages": [
        { "duration": "30s", "target": 50 },
        { "duration": "10s", "target": 200 },
        { "duration": "30s", "target": 50 }
      ]
    }
  },
  "mcp_tools": {
    "core_tools": [
      "list_workspace_collections",
      "create_collection",
      "add_document_tool",
      "get_document_tool",
      "search_by_metadata_tool",
      "update_scratchbook_tool",
      "search_scratchbook_tool",
      "list_scratchbook_notes_tool",
      "hybrid_search_advanced_tool",
      "add_watch_folder",
      "list_watched_folders"
    ],
    "performance_targets": {
      "list_workspace_collections": { "target_ms": 50, "max_ms": 150 },
      "create_collection": { "target_ms": 100, "max_ms": 200 },
      "add_document_tool": { "target_ms": 150, "max_ms": 200 },
      "get_document_tool": { "target_ms": 50, "max_ms": 150 },
      "search_by_metadata_tool": { "target_ms": 100, "max_ms": 200 },
      "update_scratchbook_tool": { "target_ms": 100, "max_ms": 200 },
      "search_scratchbook_tool": { "target_ms": 100, "max_ms": 200 },
      "list_scratchbook_notes_tool": { "target_ms": 75, "max_ms": 150 },
      "hybrid_search_advanced_tool": { "target_ms": 150, "max_ms": 200 },
      "add_watch_folder": { "target_ms": 75, "max_ms": 150 },
      "list_watched_folders": { "target_ms": 50, "max_ms": 150 }
    }
  },
  "test_data": {
    "document_samples": [
      {
        "content": "This is a test document for performance testing. It contains sample text for indexing and search operations.",
        "metadata": { "type": "test", "category": "performance", "priority": "high" }
      },
      {
        "content": "Sample Python code: def hello_world(): print('Hello, World!')",
        "metadata": { "type": "code", "language": "python", "category": "sample" }
      },
      {
        "content": "Performance testing requires careful measurement of response times and throughput under various load conditions.",
        "metadata": { "type": "documentation", "category": "testing", "priority": "medium" }
      }
    ],
    "search_queries": [
      "performance testing",
      "python code",
      "hello world",
      "sample text",
      "documentation",
      "test document",
      "code sample",
      "search operations"
    ]
  },
  "reporting": {
    "output_format": "json",
    "metrics_to_track": [
      "mcp_response_time",
      "mcp_error_rate",
      "mcp_throughput",
      "sub_200ms_responses",
      "http_req_duration",
      "http_req_failed"
    ],
    "thresholds": {
      "response_time_p95": "<200ms",
      "response_time_p99": "<500ms",
      "error_rate": "<1%",
      "success_rate": ">=95%"
    }
  }
