# Local Configuration Override Example
# Copy this file to local.yaml and customize for your local development
# local.yaml is git-ignored and won't be committed

# Personal development server settings
server:
  port: 8001  # Use different port if 8000 is occupied
  debug: true
  log_level: "DEBUG"

# Local Qdrant instance (if running custom setup)
qdrant:
  url: "http://localhost:6334"  # Custom port
  api_key: null
  timeout: 5

# Custom embedding settings for development
embedding:
  model: "sentence-transformers/all-MiniLM-L6-v2"
  chunk_size: 300  # Smaller for faster testing
  batch_size: 5
  cache_embeddings: true

# Personal workspace settings
workspace:
  collection_types: []  # Add your custom collection types here
  global_collections: []  # Add your global collections here
  github_user: "your-username"
  collection_prefix: "local_"

# Development features
development:
  hot_reload: true
  detailed_logging: true
  performance_metrics: false  # Disable if not needed
  mock_external_services: true  # For offline development

# Custom paths and settings
paths:
  data_dir: "./local_data"
  cache_dir: "./local_cache"
  logs_dir: "./local_logs"